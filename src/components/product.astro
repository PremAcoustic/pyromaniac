---
export interface Props {
  title: string;
  description: string;
  price: string;
  image: string;
}

const { title, description, price, image } = Astro.props;
---

<div class="product">
  <img src={image} alt={title} />
  <h2>{title}</h2>
  <p>{description}</p>
  <p>${price}</p>
</div>
