---
import { Dropdown as NavDropdown, DropdownItems } from "astro-navbar";
import Link from "@components/ui/button.astro"
import { Icon } from "astro-icon/components";
import QuoteDropdownList from "@components/navbar/quotedropdownlist.svelte";
import QuoteQuantity  from "@components/navbar/quotequantity.svelte";
---

<NavDropdown class="group">
  <Link
    id="add-to-quote"
    size="sm"
    style="outline"
    class="ml-4 flex items-center justify-center hover:bg-indigo-50 hover:text-indigo-600 transition-colors duration-200 ease-in-out"
    >
    <Icon class="text-indigo-600" name="fluent:calendar-agenda-24-regular" size={24} /><span class="ml-1 text-indigo-600 uppercase tracking-wider text-xs font-medium block max-sm:hidden">Quote</span>
    <QuoteQuantity client:load />
  </Link>
  <DropdownItems>
<QuoteDropdownList client:load />
  </DropdownItems>
</NavDropdown>